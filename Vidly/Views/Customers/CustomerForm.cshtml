@model Vidly.ViewModels.CustomerFormViewModel

<reference path="jquery-1.4.4.js" />
<reference path="jquery-ui.js" />
<script type="text/javascript">
    $(document).ready(function () {
        alert('alert');
            $('#Customer_BirthDate').datepicker({ dateFormat: "yyyy-mm-dd" });
        });
    </script>

@{
    /**/

    ViewBag.Title = "CustomerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customers"))
{


    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.BirthDate)
        <div>
            @Html.TextBoxFor(m => m.Customer.BirthDate,
                    Model.Customer.BirthDate.HasValue ? Model.Customer.BirthDate.Value.ToString("yyyy-MM-dd") : " ",
                    new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Customer.BirthDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId,
                    new SelectList(Model.MembershipTypes, "Id", "Name"),
                    "[select]",
                    new { @class = "form-control" })
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter) @Html.LabelFor(m => m.Customer.IsSubscribedToNewsletter)
        </label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

    <script type="text/javascript">$(function () {
    alert('alert');
    $("#Customer_BirthDate").datepicker({ dateFormat: 'yyyy-MM-dd' });
        });</script>
}

